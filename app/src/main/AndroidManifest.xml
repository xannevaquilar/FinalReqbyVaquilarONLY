<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vaquilar.finalreq.mshopping">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/mshoppinglogo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/mshoppinglogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity
            android:name="com.vaquilar.finalreq.mshopping.activity.WelcomeActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.vaquilar.finalreq.mshopping.activity.MainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.vaquilar.finalreq.mshopping.activity.BaseActivity" />
        <activity
            android:name="com.vaquilar.finalreq.mshopping.activity.ProductActivity"
            android:configChanges="orientation|screenSize|keyboardHidden" />
        <activity
            android:name="com.vaquilar.finalreq.mshopping.activity.LoginRegisterActivity"
            android:configChanges="orientation|screenSize|keyboardHidden" />
        <activity android:name="com.vaquilar.finalreq.mshopping.activity.CartActivity" />
        <activity android:name="com.vaquilar.finalreq.mshopping.activity.CheckoutActivity" />
        <activity android:name="com.vaquilar.finalreq.mshopping.activity.ProductViewActivity"></activity>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/mshoppinglogo" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />
        <!-- Firebase Notifications -->
        <service android:name="com.vaquilar.finalreq.mshopping.service.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>